{
  "name": "project-luth",
  "version": "1.0.0",
  "description": "Full stack web application for a startup business idea",
  "main": "index.js",
  "repository": "https://github.com/samsoedien/project-luth",
  "author": "Nathan Samsoedien <info@samsoedien.com>",
  "license": "MIT",
  "private": true,
  "packageManager": "yarn@4.1.0",
  "workspaces": [
    "packages/*"
  ],
  "scripts": {
    "prepare": "husky",
    "postinstall": "manypkg check",
    "deps": "manypkg fix",
    "dev": "turbo dev",
    "lint": "yarn lint:scripts && yarn lint:styles",
    "lint:scripts": "eslint . --ext .ts,.tsx",
    "lint:styles": "stylelint \"**/*.scss\"",
    "build": "turbo build",
    "test": "jest",
    "pre-commit": "yarn lint-staged",
    "format": "prettier --write .",
    "storybook": "turbo storybook"
  },
  "lint-staged": {
    "packages/**/*.{html,css,scss,js,jsx,ts,tsx,json,md,mdx}": [
      "yarn format"
    ]
  },
  "dependencies": {
    "@commitlint/cli": "^19.0.3",
    "@commitlint/config-conventional": "^19.0.3",
    "@manypkg/cli": "^0.21.2",
    "@types/jest": "^29.5.12",
    "@typescript-eslint/eslint-plugin": "^6.4.0",
    "@typescript-eslint/parser": "^6.0.0",
    "eslint": "^8.57.0",
    "eslint-config-airbnb-base": "^15.0.0",
    "eslint-config-airbnb-typescript": "^17.1.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-config-standard-with-typescript": "^43.0.1",
    "eslint-plugin-import": "^2.29.1",
    "eslint-plugin-n": "^16.6.2",
    "eslint-plugin-promise": "^6.1.1",
    "husky": "^9.0.11",
    "jest": "^29.7.0",
    "kill-port": "^2.0.1",
    "lint-staged": "^15.2.2",
    "prettier": "^3.2.5",
    "rimraf": "^5.0.5",
    "stylelint": "^16.2.1",
    "stylelint-config-standard": "^36.0.0",
    "ts-jest": "^29.1.2",
    "turbo": "^1.12.4",
    "typescript": "^5.2.2",
    "vite-plugin-dts": "^3.7.3"
  },
  "alias": {
    "react": "preact/compat",
    "react-dom": "preact/compat",
    "react/jsx-runtime": "preact/jsx-runtime"
  }
}
