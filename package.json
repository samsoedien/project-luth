{
  "name": "project-luth",
  "version": "1.0.0",
  "description": "Full stack web application for a startup business idea",
  "main": "index.js",
  "repository": "https://github.com/samsoedien/project-luth",
  "author": "Nathan Samsoedien <info@samsoedien.com>",
  "license": "MIT",
  "private": true,
  "packageManager": "yarn@4.9.1",
  "workspaces": [
    "apps/*",
    "packages/*"
  ],
  "scripts": {
    "start": "turbo dev",
    "dev": "turbo dev",
    "client": "turbo dev --filter @project-luth/client",
    "server": "turbo dev --filter @project-luth/server",
    "common": "turbo dev --filter @project-luth/common",
    "native": "echo 'No native app yet' && exit 1",
    "native:android": "expo start --android",
    "native:ios": "expo start --ios",
    "native:web": "expo web",
    "desktop": "echo 'No desktop app yet' && exit 1",
    "sandbox": "cd sandbox && yarn start",
    "storybook": "turbo storybook",
    "prisma": "cd apps/client && yarn prisma studio",
    "format": "prettier --write .",
    "lint": "yarn lint:scripts && yarn lint:styles",
    "lint:scripts": "eslint \"./{apps,packages}/**/*.{js,jsx,ts,tsx}\"",
    "lint:styles": "stylelint ./packages/**/*.{css,scss} --allow-empty-input",
    "test": "turbo run test",
    "build": "turbo build",
    "build:common": "turbo build --filter @project-luth/common",
    "build:tokens": "turbo build --filter @project-luth/tokens",
    "clean": "turbo clean && rimraf out",
    "docker": "docker compose watch",
    "docker:network": "docker network create app_network",
    "docker:prune": "docker system prune -a",
    "kill": "kill-port 3000 5000 8000 8001",
    "prepare": "husky",
    "postinstall": "manypkg check",
    "deps": "manypkg fix && depcheck",
    "pre-commit": "yarn lint-staged"
  },
  "lint-staged": {
    "packages/**/*.{html,css,scss,js,jsx,ts,tsx,json,md,mdx}": [
      "yarn format"
    ]
  },
  "devDependencies": {
    "@commitlint/cli": "^19.8.0",
    "@commitlint/config-conventional": "^19.8.0",
    "@eslint/js": "^9.26.0",
    "@manypkg/cli": "^0.23.0",
    "@originjs/vite-plugin-federation": "^1.4.1",
    "@types/jest": "^29.5.14",
    "@typescript-eslint/eslint-plugin": "~8.31.0",
    "@typescript-eslint/parser": "~8.31.0",
    "@vercel/style-guide": "^6.0.0",
    "concurrently": "^9.1.2",
    "depcheck": "^1.4.7",
    "eslint": "^9.25.1",
    "eslint-config-airbnb": "^19.0.4",
    "eslint-config-airbnb-base": "^15.0.0",
    "eslint-config-airbnb-typescript": "^18.0.0",
    "eslint-config-prettier": "^10.1.2",
    "eslint-config-turbo": "^2.5.0",
    "eslint-plugin-import": "^2.31.0",
    "eslint-plugin-jsx-a11y": "^6.10.2",
    "eslint-plugin-n": "^17.17.0",
    "eslint-plugin-promise": "^7.2.1",
    "eslint-plugin-react": "^7.37.5",
    "eslint-plugin-react-hooks": "^5.2.0",
    "eslint-plugin-react-refresh": "^0.4.19",
    "globals": "^16.0.0",
    "husky": "^9.1.7",
    "jest": "^29.7.0",
    "kill-port": "^2.0.1",
    "lint-staged": "^15.5.1",
    "prettier": "^3.5.3",
    "prettier-plugin-tailwindcss": "^0.6.11",
    "rimraf": "^6.0.1",
    "stylelint": "^16.18.0",
    "stylelint-config-css-modules": "^4.4.0",
    "stylelint-config-standard": "^38.0.0",
    "stylelint-config-styled-components": "^0.1.1",
    "stylelint-prettier": "^5.0.3",
    "stylelint-selector-bem-pattern": "^4.0.1",
    "ts-jest": "^29.3.2",
    "turbo": "^2.5.2",
    "typescript": "^5.8.3",
    "typescript-eslint": "^8.32.0"
  }
}
