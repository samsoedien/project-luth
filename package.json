{
  "name": "project-luth",
  "version": "1.0.0",
  "description": "Full stack web application for a startup business idea",
  "main": "index.js",
  "repository": "https://github.com/samsoedien/project-luth",
  "author": "Nathan Samsoedien <info@samsoedien.com>",
  "license": "MIT",
  "private": true,
  "packageManager": "yarn@4.1.1",
  "workspaces": [
    "apps/*",
    "packages/*"
  ],
  "scripts": {
    "start": "turbo dev",
    "dev": "turbo dev",
    "client": "turbo dev --scope client",
    "server": "turbo dev --scope server",
    "common": "turbo dev --scope common",
    "native": "echo 'No native app yet' && exit 1",
    "native:android": "expo start --android",
    "native:ios": "expo start --ios",
    "native:web": "expo web",
    "desktop": "echo 'No desktop app yet' && exit 1",
    "storybook": "turbo storybook",
    "format": "prettier --write .",
    "lint": "yarn lint:scripts && yarn lint:styles",
    "lint:scripts": "eslint \"./packages/**/*.{js,jsx,ts,tsx}\"",
    "lint:styles": "stylelint ./packages/**/*.{css,scss}",
    "test": "turbo run test",
    "build": "turbo build",
    "build:common": "turbo build --scope common",
    "build:tokens": "turbo build --scope tokens",
    "clean": "turbo clean && rimraf out",
    "docker": "docker compose watch",
    "docker:network": "docker network create app_network",
    "docker:prune": "docker system prune -a",
    "kill": "kill-port 3000 5000 8000 8001",
    "prepare": "husky",
    "postinstall": "manypkg check",
    "deps": "manypkg fix",
    "pre-commit": "yarn lint-staged"
  },
  "lint-staged": {
    "packages/**/*.{html,css,scss,js,jsx,ts,tsx,json,md,mdx}": [
      "yarn format"
    ]
  },
  "dependencies": {
    "@commitlint/cli": "^19.0.3",
    "@commitlint/config-conventional": "^19.0.3",
    "@manypkg/cli": "^0.21.2",
    "@originjs/vite-plugin-federation": "^1.3.5",
    "@types/jest": "^29.5.12",
    "@typescript-eslint/eslint-plugin": "~7.2.0",
    "@typescript-eslint/parser": "~7.2.0",
    "@vercel/style-guide": "^6.0.0",
    "concurrently": "^8.2.2",
    "eslint": "^8.57.0",
    "eslint-config-airbnb": "^19.0.4",
    "eslint-config-airbnb-base": "^15.0.0",
    "eslint-config-airbnb-typescript": "^18.0.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-config-standard-with-typescript": "^43.0.1",
    "eslint-config-turbo": "^1.12.5",
    "eslint-plugin-import": "^2.29.1",
    "eslint-plugin-jsx-a11y": "^6.8.0",
    "eslint-plugin-n": "^16.6.2",
    "eslint-plugin-promise": "^6.1.1",
    "eslint-plugin-react": "^7.34.0",
    "eslint-plugin-react-hooks": "^4.6.0",
    "eslint-plugin-react-refresh": "^0.4.5",
    "husky": "^9.0.11",
    "jest": "^29.7.0",
    "kill-port": "^2.0.1",
    "lint-staged": "^15.2.2",
    "prettier": "^3.2.5",
    "prettier-plugin-tailwindcss": "^0.5.11",
    "rimraf": "^5.0.5",
    "stylelint": "^16.2.1",
    "stylelint-config-css-modules": "^4.4.0",
    "stylelint-config-standard": "^36.0.0",
    "stylelint-config-styled-components": "^0.1.1",
    "stylelint-prettier": "^5.0.0",
    "stylelint-selector-bem-pattern": "^4.0.0",
    "ts-jest": "^29.1.2",
    "turbo": "^1.12.5",
    "typescript": "^5.2.2"
  },
  "alias": {
    "react": "preact/compat",
    "react-dom": "preact/compat",
    "react/jsx-runtime": "preact/jsx-runtime"
  }
}
