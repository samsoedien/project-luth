{
  "name": "@project-luth/common",
  "private": true,
  "version": "0.0.0",
  "type": "module",
  "scripts": {
    "dev": "vite --port 8000 --strictPort --host",
    "build": "tsc && vite build",
    "build:watch": "tsc && vite build --watch",
    "lint": "eslint .",
    "preview": "vite preview --port 8000 --strictPort --host",
    "gltf": "node ./scripts/gltf-pipeline.cjs",
    "gltf:normalize": "node ./scripts/gltf-normalize-uvs.cjs",
    "model": "yarn model:soundboard && yarn model:sides && yarn model:heeltailblocks && yarn model:codemod",
    "model:luth": "npx @rosskevin/gltfjsx ./public/luth-acoustic.glb --types --transform --keepnames --keepmeshes --draco --meta --shadows --exportdefault --output ./src/_generated/LuthAcoustic.tsx",
    "model:soundboard": "npx gltfjsx ./public/Soundboard_Collection.glb --types --transform --instanceall --keepmeshes --keepmaterials --keepattributes --keepnames --draco --meta --shadows --exportdefault --output ./src/_generated/LuthSoundboard.tsx",
    "model:sides": "npx gltfjsx ./public/Sides_Collection.glb --types --transform --instanceall --keepmeshes --keepmaterials --keepattributes --keepnames --draco --meta --shadows --exportdefault --output ./src/_generated/LuthSides.tsx",
    "model:heeltailblocks": "npx gltfjsx ./public/Heel_Tail_Blocks_Collection.glb --types --transform --instanceall --keepmeshes --keepmaterials --keepattributes --keepnames --draco --meta --shadows --exportdefault --output  ./src/_generated/LuthHeelTailBlocks.tsx",
    "model:codemod": "npx tsx scripts/codemod.ts --dir ./src/_generated"
  },
  "dependencies": {
    "@react-three/drei": "^10.0.7",
    "@react-three/fiber": "^9.1.2",
    "@react-three/postprocessing": "^3.0.4",
    "leva": "^0.10.0",
    "node-three-gltf": "^2.0.2",
    "postprocessing": "^6.37.3",
    "react": "^19.1.0",
    "react-dom": "^19.1.0",
    "three": "^0.166.1",
    "zustand": "^5.0.4"
  },
  "devDependencies": {
    "@babel/core": "^7.27.1",
    "@eslint/js": "^9.26.0",
    "@originjs/vite-plugin-federation": "^1.4.1",
    "@types/react": "^19.1.2",
    "@types/react-dom": "^19.1.2",
    "@types/three": "^0.176.0",
    "@vitejs/plugin-react-swc": "^3.9.0",
    "eslint": "^9.25.1",
    "eslint-plugin-react-hooks": "^5.2.0",
    "eslint-plugin-react-refresh": "^0.4.19",
    "gl-matrix": "^3.4.3",
    "globals": "^16.0.0",
    "gltf-pipeline": "^4.1.0",
    "r3f-perf": "^7.2.3",
    "ts-morph": "^25.0.1",
    "typescript": "^5.8.3",
    "typescript-eslint": "^8.32.0",
    "vite": "^6.3.2",
    "yargs": "^17.7.2"
  },
  "repository": "https://github.com/samsoedien/project-luth/tree/master/apps/common"
}
