{
  "name": "@project-luth/common",
  "private": true,
  "version": "0.0.0",
  "type": "module",
  "scripts": {
    "dev": "vite --port 8000 --strictPort --host",
    "build": "tsc && vite build",
    "build:watch": "tsc && vite build --watch",
    "lint": "eslint .",
    "preview": "vite preview --port 8000 --strictPort --host",
    "gltf": "node ./scripts/gltf-pipeline.cjs",
    "gltf:normalize": "node ./scripts/gltf-normalize-uvs.cjs",
    "model": "yarn model:dreadnaught && yarn model:parlor",
    "model:gltfjsx": "npx gltfjsx ./public/luth-acoustic.glb --types --transform --keepnames --keepmeshes --draco --meta --shadows --exportdefault --instanceall --output ./src/_generated/LuthAcoustic.tsx",
    "model:soundboard": "npx gltfjsx ./public/Luth_Soundboard.glb --types --transform --keepnames --keepmeshes --draco --meta --shadows --exportdefault --output ./src/_generated/LuthSoundboard.tsx",
    "model:dreadnaught": "npx gltfjsx ./public/luth-acoustic-1.glb --types --transform --keepnames --keepmeshes --draco --meta --shadows --exportdefault --instanceall --output ./src/_generated/LuthAcoustic.tsx",
    "model:parlor": "npx gltfjsx ./public/luth-acoustic-parlor.glb --types --keepnames --draco --meta --transform --exportdefault --debug --output ./src/_generated/LuthAcousticParlor.tsx"
  },
  "dependencies": {
    "@react-three/drei": "^10.0.6",
    "@react-three/fiber": "^9.1.2",
    "@react-three/postprocessing": "^3.0.4",
    "leva": "^0.10.0",
    "postprocessing": "^6.37.2",
    "preact": "^10.26.5",
    "preact-custom-element": "^4.3.0",
    "preact-reconciler": "^0.2.2",
    "react": "^19.1.0",
    "react-dom": "^19.1.0",
    "three": "^0.175.0",
    "zustand": "^5.0.3"
  },
  "devDependencies": {
    "@babel/core": "^7.26.10",
    "@eslint/js": "^9.25.1",
    "@originjs/vite-plugin-federation": "^1.4.1",
    "@preact/preset-vite": "^2.10.1",
    "@types/preact-custom-element": "^4.0.4",
    "@types/react": "^19.1.2",
    "@types/react-dom": "^19.1.2",
    "@types/three": "^0.175.0",
    "@vitejs/plugin-react-swc": "^3.9.0",
    "eslint": "^9.25.1",
    "eslint-plugin-react-hooks": "^5.2.0",
    "eslint-plugin-react-refresh": "^0.4.19",
    "gl-matrix": "^3.4.3",
    "globals": "^16.0.0",
    "gltf-pipeline": "^4.1.0",
    "gltfjsx": "^6.5.3",
    "r3f-perf": "^7.2.3",
    "typescript": "^5.8.3",
    "typescript-eslint": "^8.31.0",
    "vite": "^6.3.2"
  },
  "alias": {
    "react": "preact/compat",
    "react-dom/test-utils": "preact/test-utils",
    "react-dom": "preact/compat",
    "react/jsx-runtime": "preact/jsx-runtime"
  },
  "repository": "https://github.com/samsoedien/project-luth/tree/master/apps/common"
}
