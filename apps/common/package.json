{
  "name": "@project-luth/common",
  "private": true,
  "version": "0.0.0",
  "type": "module",
  "scripts": {
    "dev": "vite --port 8000 --strictPort --host",
    "build": "tsc && vite build",
    "build:watch": "tsc && vite build --watch",
    "lint": "eslint .",
    "preview": "vite preview --port 8000 --strictPort --host",
    "model": "yarn model:dreadnaught && yarn model:parlor",
    "model:dreadnaught": "npx gltfjsx ./public/luth-acoustic.glb --types --transform --keepnames --keepmeshes --meta --shadows --exportdefault --instanceall --output ./src/_generated/LuthAcoustic.tsx",
    "model:parlor": "npx gltfjsx@6.5.0 ./public/luth-acoustic-parlor.glb --types --keepnames --draco --meta --transform --keepmaterials --exportdefault --debug --instanceall --output ./src/_generated/LuthAcousticParlor.tsx"
  },
  "dependencies": {
    "@react-three/drei": "^9.113.0",
    "@react-three/fiber": "^8.17.8",
    "leva": "^0.9.35",
    "preact": "^10.23.2",
    "preact-custom-element": "^4.3.0",
    "preact-reconciler": "^0.1.8",
    "react": "^18.3.1",
    "react-dom": "^18.3.1",
    "three": "^0.168.0",
    "zustand": "^5.0.0-rc.2"
  },
  "devDependencies": {
    "@babel/core": "^7.25.2",
    "@eslint/js": "^9.9.0",
    "@originjs/vite-plugin-federation": "^1.3.5",
    "@preact/preset-vite": "^2.9.0",
    "@types/preact-custom-element": "^4.0.4",
    "@types/react": "^18.3.8",
    "@types/react-dom": "^18.3.0",
    "@types/three": "^0.168.0",
    "@vitejs/plugin-react-swc": "^3.7.0",
    "eslint": "^9.9.0",
    "eslint-plugin-react-hooks": "^5.1.0-rc.0",
    "eslint-plugin-react-refresh": "^0.4.9",
    "globals": "^15.9.0",
    "gltfjsx": "^6.5.2",
    "r3f-perf": "^7.2.1",
    "typescript": "^5.4.3",
    "typescript-eslint": "^8.4.0",
    "vite": "^5.4.7"
  },
  "alias": {
    "react": "preact/compat",
    "react-dom/test-utils": "preact/test-utils",
    "react-dom": "preact/compat",
    "react/jsx-runtime": "preact/jsx-runtime"
  },
  "repository": "https://github.com/samsoedien/project-luth/tree/master/apps/common"
}
