{
  "name": "@project-luth/common",
  "private": true,
  "version": "0.0.0",
  "type": "module",
  "scripts": {
    "dev": "vite --port 8000 --strictPort --host",
    "build": "tsc && vite build",
    "build:watch": "tsc && vite build --watch",
    "lint": "eslint .",
    "preview": "vite preview --port 8000 --strictPort --host",
    "gltf": "node ./scripts/gltf-pipeline.cjs",
    "gltf:normalize": "node ./scripts/gltf-normalize-uvs.cjs",
    "model": "npx gltfjsx@6.5.0 ./public/luth-acoustic.glb --types --transform --keepnames --keepmeshes --draco --meta --shadows --exportdefault --instanceall --output ./src/_generated/LuthAcoustic.tsx",
    "model:test": "npx gltfjsx@6.5.0 ./public/luth-acoustic.glb --types --transform --keepnames --keepmeshes --draco --meta --shadows --exportdefault --output ./src/_generated/LuthAcousticTest.tsx",
    "model:suz": "npx gltfjsx@6.5.0 ./public/suzanne.gltf --types --transform  --output ./src/_generated/Model.tsx",
    "model:fork": "npx @rosskevin/gltfjsx ./public/luth-acoustic.glb --types --keepnames --draco --meta --transform --exportdefault --output ./src/_generated/LuthAcousticRoss.tsx",
    "model:sides": "npx @rosskevin/gltfjsx ./public/Sides_Collection.glb --transform --types --keepnames --keepmeshes --draco --meta --shadows --exportdefault --instanceall --output ./src/_generated/LuthSides.tsx",
    "model:heeltailblocks": "npx @rosskevin/gltfjsx ./public/Heel_Tail_Blocks_Collection.glb --transform --types --keepnames --keepmeshes --draco --meta --shadows --exportdefault --instanceall --output ./src/_generated/LuthHeelTailBlocks.tsx",
    "model:soundboard": "npx @rosskevin/gltfjsx ./public/Soundboard_Collection.glb --transform --types --keepnames --keepmeshes --draco --meta --shadows --exportdefault  --instanceall --output ./src/_generated/LuthSoundboard.tsx",
    "model:parlor": "npx @rosskevin/gltfjsx ./public/Parlor_Collection.glb --transform --types --keepnames --keepmeshes --draco --meta --shadows --exportdefault  --instanceall --output ./src/_generated/LuthParlor.tsx",
    "model:flor": "npx @rosskevin/gltfjsx ./public/Body_Sides_Florentine_Cutaway.glb --transform --types --keepnames --keepmeshes --draco --meta --shadows --exportdefault  --instanceall --output ./src/_generated/LuthFlor.tsx"
  },
  "dependencies": {
    "@react-three/drei": "^10.0.7",
    "@react-three/fiber": "^9.1.2",
    "@react-three/postprocessing": "^3.0.4",
    "leva": "^0.10.0",
    "postprocessing": "^6.37.2",
    "react": "^19.1.0",
    "react-dom": "^19.1.0",
    "three": "^0.175.0",
    "zustand": "^5.0.4"
  },
  "devDependencies": {
    "@babel/core": "^7.27.1",
    "@eslint/js": "^9.25.1",
    "@originjs/vite-plugin-federation": "^1.4.1",
    "@types/react": "^19.1.2",
    "@types/react-dom": "^19.1.3",
    "@types/three": "^0.176.0",
    "@vitejs/plugin-react-swc": "^3.9.0",
    "eslint": "^9.25.1",
    "eslint-plugin-react-hooks": "^5.2.0",
    "eslint-plugin-react-refresh": "^0.4.20",
    "gl-matrix": "^3.4.3",
    "globals": "^16.0.0",
    "gltf-pipeline": "^4.1.0",
    "gltfjsx": "^6.5.3",
    "r3f-perf": "^7.2.3",
    "typescript": "^5.8.3",
    "typescript-eslint": "^8.31.1",
    "vite": "^6.3.4"
  },
  "repository": "https://github.com/samsoedien/project-luth/tree/master/apps/common"
}
