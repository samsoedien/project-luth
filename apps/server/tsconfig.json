{
  "compileOnSave": true,
  "compilerOptions": {
    "target": "es2017",
    "module": "commonjs",
    "lib": ["es6", "dom"],
    "allowJs": false,
    "sourceMap": true,
    "outDir": "./dist",
    "rootDir": "./src",
    "removeComments": true,
    "noEmitOnError": true,
    "strict": true,
    "baseUrl": "./",
    "moduleResolution": "node",
    "typeRoots": ["./node_modules/@types", "./typings"],
    "esModuleInterop": true
  },
  "exclude": ["**/*.test.ts"],
  "include": ["./src/**/*", "./typings"]
}
