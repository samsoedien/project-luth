{
  "name": "@project-luth/shared",
  "version": "0.0.0",
  "repository": "https://github.com/samsoedien/project-luth/tree/master/packages/shared",
  "type": "module",
  "files": [
    "lib"
  ],
  "module": "./lib/esm/index.js",
  "main": "./lib/cjs/index.js",
  "types": "./lib/types/index.d.ts",
  "exports": {
    ".": {
      "import": "./lib/esm/index.js",
      "require": "./lib/cjs/index.js"
    }
  },
  "scripts": {
    "dev": "vite --port 8000",
    "build": "tsc && vite build && yarn build:styles",
    "build:styles": "npx tailwindcss -i ./src/tokens/globals.css  -o ./lib/tokens/globals.css --postcss --minify",
    "lint": "eslint . --ext ts,tsx --report-unused-disable-directives --max-warnings 99 --fix",
    "preview": "vite preview",
    "release": "yarn changeset version && yarn changeset publish",
    "storybook": "storybook dev -p 6006",
    "storybook:build": "storybook build",
    "clean": "rimraf ./lib"
  },
  "dependencies": {
    "@radix-ui/react-slot": "^1.0.2",
    "class-variance-authority": "^0.7.0",
    "clsx": "^2.1.0",
    "lucide-react": "^0.344.0",
    "preact": "^10.19.5",
    "tailwind-merge": "^2.2.1",
    "tailwindcss-animate": "^1.0.7"
  },
  "devDependencies": {
    "@babel/core": "^7.24.0",
    "@changesets/cli": "^2.27.1",
    "@preact/preset-vite": "^2.8.1",
    "@storybook/addon-essentials": "^7.6.17",
    "@storybook/addon-interactions": "^7.6.17",
    "@storybook/addon-links": "^7.6.17",
    "@storybook/blocks": "^7.6.17",
    "@storybook/preact": "^7.6.17",
    "@storybook/preact-vite": "^7.6.17",
    "@storybook/test": "^7.6.17",
    "@types/node": "^20.11.24",
    "autoprefixer": "^10.4.18",
    "eslint-plugin-react-refresh": "^0.4.5",
    "postcss": "^8.4.35",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "storybook": "^7.6.17",
    "tailwindcss": "^3.4.1",
    "typescript": "^5.2.2",
    "vite": "^5.1.4"
  }
}
