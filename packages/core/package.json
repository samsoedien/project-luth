  "scripts": {
    "dev": "vite",
    "build": "tsc && vite build && yarn build:styles",
    "build:styles": "npx tailwindcss -i ./src/styles/globals.css  -o ./lib/styles/globals.css --postcss --minify",
    "lint": "eslint . --ext ts,tsx --report-unused-disable-directives --max-warnings 0",
    "preview": "vite preview",
    "release": "yarn changeset version && yarn changeset publish",
    "storybook": "storybook dev -p 6006",
    "storybook:build": "storybook build",
    "ui:scaffold": "npx shadcn-ui@latest add",
    "ui:diff": "npx shadcn-ui diff",
