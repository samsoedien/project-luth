{
  "$schema": "https://turbo.build/schema.json",
  "globalEnv": [
    "NODE_ENV",
    "PORT",
    "VERCEL",
    "VERCEL_URL",
    "DATABASE_URL",
    "JWT_SECRET",
    "NEXTAUTH_URL",
    "NEXTAUTH_SECRET",
    "RESEND_API_KEY",
    "AUTH_SECRET",
    "AUTH_RESEND_KEY",
    "SKIP_ENV_VALIDATION",
    "STRIPE_SECRET_KEY"
  ],
  "tasks": {
    "build": {
      "dependsOn": ["^build"],
      "outputs": ["dist/**", ".next/**", "!.next/cache/**"]
    },
    "deploy": {
      "dependsOn": ["build", "test", "lint"]
    },
    "test": {
      "dependsOn": ["build"],
      "inputs": ["src/**/*.tsx", "src/**/*.ts", "test/**/*.ts", "test/**/*.tsx"]
    },

    "lint": {},
    "dev": {
      "cache": false,
      "persistent": true
    },
    "type-check": {},
    "storybook": {},
    "clean": {}
  }
}
